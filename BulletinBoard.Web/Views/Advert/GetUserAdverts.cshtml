@model IEnumerable<BulletinBoard.Core.Entities.Advert>

@{
    ViewBag.Title = "GetUserAdverts";
}

<h2>My own Adverts</h2>

@foreach (var item in Model)
{
    <dt>
        @Html.DisplayFor(modelItem => item.Title)
    </dt>

    <dt>
        <img src="@Url.Content(item.ImagePath)" />
    </dt>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-info" value="Update advert" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'" />
            <input type="button" class="btn btn-info" value="View advert" onclick="location.href='@Url.Action("Details", new { id = item.Id })'" />
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "viewDialog", data_dialog_title = "DELETE ADVERT" })
        </div>
    </div>
}