@model BulletinBoard.Core.Entities.Comment

@using (Html.BeginForm("CreateNewComment", "Advert", FormMethod.Post))
{
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
        <h4>Comment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AdvertComment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdvertComment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdvertComment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.Hidden("advertId", ViewData["AdvertId"])
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}
